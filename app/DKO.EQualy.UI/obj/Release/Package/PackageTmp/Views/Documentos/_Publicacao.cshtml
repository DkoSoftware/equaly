@model DKO.Equaly.DTO.Documentos.SolicitacaoDocumentoDto
<div>
    <div class="row-fluid">
        @using (Ajax.BeginForm("ExecucaoFase5Publicacao", "Documentos", new AjaxOptions
        {
            LoadingElementId = "loaderModal",
            OnSuccess = "obterResultadoFase5Success",
            OnFailure = "obterResultadoFase5Error",
            HttpMethod = "POST",
        }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.TipoDeArmazenamento, new { @id = "hfTipoArmazenamento" })
            <h3>Publicação</h3>
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.Titulo, new { @class = "control-label" })
                        <div class="controls controls-row">
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "m-wrap span12", @readonly = "readonly" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="span6 ">
                        <div class="control-group">
                            @Html.LabelFor(model => model.DataDePublicacao, new { @class = "control-label" })
                            <div class="controls">
                                <div class="input-append date date-picker m-wrap span12" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    @Html.TextBoxFor(model => model.DataDePublicacao, new { @class = "m-wrap date-range span11", id = "txtDataPublicacao", @required = "required", @title = "Campo obrigatório" })<span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            @Html.LabelFor(model => model.Validade, new { @class = "control-label" })
                            <div class="controls">
                                <div class="input-append date date-picker m-wrap span12" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                    @Html.TextBoxFor(model => model.Validade, new { @class = "m-wrap date-range span11", id = "txtDataValidade", @required = "required", @title = "Campo obrigatório" })<span class="add-on"><i class="icon-calendar"></i></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="span6 ">
                        <div class="control-group">
                            @Html.LabelFor(model => model.LocalFisico, new { @class = "control-label", @for = "txtLocalFisico" })
                            <div class="controls">
                                @Html.TextBoxFor(model => model.LocalFisico, new { @class = "m-wrap span12", id = "txtLocalFisico", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                    <div class="span6 ">
                        <div class="control-group">
                            @Html.LabelFor(model => model.QtdNumeroCopia, new { @class = "control-label", @for = "txtNumeroCopia" })
                            <div class="controls">
                                @Html.TextBoxFor(model => model.QtdNumeroCopia, new { @class = "m-wrap span12", id = "txtNumeroCopia", @type = "number", @readonly = "readonly" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.CopiaControlada, new { @class = "control-label", @for = "txtCopiaControlada" })
                        <div class="controls">
                            @Html.CheckBoxFor(model => model.CopiaControlada, new { @class = "m-wrap", id = "txtCopiaControlada", @readonly = "readonly" , @disabled="disabled"})
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions" style="text-align: right;">
                <button type="button" data-dismiss="modal" class="btn"><i class="m-icon-swapleft"></i> Cancelar</button>
                <button type="submit" class="btn green"> Publicar <i class="icon-ok"></i></button>
            </div>
        }
    </div>
</div>
<script src="~/Scripts/Documentos/Publicacao/publicacao.js"></script>