@model DKO.Equaly.DTO.NaoConformidade.NaoConformidadeDto

<div id="responsive" class="modal hide fade" tabindex="-1" data-width="90%">
    <div class="modal-body">
        <div id="loaderModal" style="display: none;" class="loader-modal">
            <div>
                <img src="~/Content/assets/img/ajax-modal-loading.gif" /><br />
                Aguarde...<br /><span>processando a operação solicitada</span>
            </div>
        </div>
        <div class="row-fluid">
            <div class="portlet box red">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-cogs"></i>Cadastro de não conformidades</div>
                    <div class="tools">
                        <a href="javascript:;" data-dismiss="modal" class="remove"></a>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="tabbable tabbable-custom">
                        <ul class="nav nav-tabs">
                            <li class="active"><a href="#tab_1_1" data-toggle="tab"><span class="badge">1</span> Reclamativa</a></li>
                            <li><a href="#tab_1_2" data-toggle="tab"><span class="badge">2</span> Análise da causa</a></li>
                            <li><a href="#tab_1_3" data-toggle="tab"><span class="badge">3</span> Plano de ação</a></li>
                            <li><a href="#tab_1_4" data-toggle="tab"><span class="badge">4</span> Avaliação da eficácia</a></li>
                            <li><a href="#tab_1_5" data-toggle="tab"><span class="badge">5</span> Histórico</a></li>
                        </ul>
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab_1_1">
                                @Html.Action("ReclamativaIndex", "NaoConformidades", new { @naoConformidadeId = Model.NaoConformidadeId })
                            </div>
                            <div class="tab-pane" id="tab_1_2">
                                @Html.Action("AnaliseDaCausaIndex", "NaoConformidades", new { @naoConformidadeId = Model.NaoConformidadeId })
                            </div>
                            <div class="tab-pane" id="tab_1_3">
                                @Html.Action("PlanoDeAcaoIndex", "NaoConformidades", new { @naoConformidadeId = Model.NaoConformidadeId })
                            </div>
                            <div class="tab-pane" id="tab_1_4">
                                @Html.Action("AvaliacaoDaEficaciaIndex", "NaoConformidades", new { @naoConformidadeId = Model.NaoConformidadeId })
                            </div>
                            <div class="tab-pane" id="tab_1_5">
                                @Html.Action("HistoricoIndex", "NaoConformidades", new { @naoConformidadeId = Model.NaoConformidadeId })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
