@model DKO.Equaly.DTO.NaoConformidade.ReclamativaDto

<div class="row-fluid">
    <div class="span12">
        <h3>Reclamativa</h3><br />
        @using (Ajax.BeginForm("RegistrarReclamativa", "NaoConformidades", new AjaxOptions
        {
            LoadingElementId = "loaderModal",
            OnFailure = "obterResultadoRegReclamativaError",
            OnSuccess = "obterResultadoRegReclamativaSuccess",
            HttpMethod = "POST",
        }))
        {
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.NaoConformidadeId)
            <div class="row-fluid">
                <div class="span6 ">
                    <div class="span12 ">
                        <div class="control-group">
                            @Html.LabelFor(model => model.Titulo, new { @class = "control-label" })
                            @Html.TextBoxFor(model => model.Titulo, new { @class = "span12 m-wrap", @id = "txtTitulo", @required = "required", @title = "Campo obrigatório", @pattern="{1,5}"})
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="span6">
                        <div class="controls">
                            @Html.LabelFor(model => model.DataCriacao, new { @class = "control-label" })
                            <div class="input-append date date-picker m-wrap span11" data-date-format="dd-mm-yyyy" data-date-viewmode="years">
                                @Html.TextBoxFor(model => model.DataCriacao, new { @class = "m-wrap date-picker span12", @id = "txtDataCriacao", @required = "required", @title = "Campo obrigatório" })<span class="add-on"><i class="icon-calendar"></i></span>
                            </div>
                        </div>
                    </div>
                    <div class="span6">
                        <div class="controls">
                            @Html.LabelFor(model => model.NumeroPedidoNf, new { @class = "control-label" })
                            <div class="controls">
                                @Html.TextBoxFor(model => model.NumeroPedidoNf, new { @class = "m-wrap span12", @id = "txtNumeroNF" })
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.NomeReclamante, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.NomeReclamante, new { @class = "span12 m-wrap", @id = "txtNome", @required = "required", @title = "Campo obrigatório" })
                        </div>
                    </div>
                </div>
                <div class="span6 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.TelefoneReclamante, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextBoxFor(model => model.TelefoneReclamante, new { @class = "span12 m-wrap", @id = "txtTelefone", @required = "required", @title = "Campo obrigatório" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span6 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.EmailReclamante, new { @class = "control-label" })
                        <div class="controls">
                            <div class="input-icon left">
                                <i class="icon-envelope"></i>
                                @Html.TextBoxFor(model => model.EmailReclamante, new { @class = "span12 m-wrap", @id = "txtEmail" , @type="email"})
                            </div>
                        </div>
                    </div>
                </div>
                <div class="span6 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.UsuarioCriouId, new { @class = "control-label" })
                        <div class="controls">
                            @Html.DropDownListFor(model => model.UsuarioCriouId, new SelectList(ViewBag.Usuarios, "Text", "Value"), "Selecione...", new { @class = "span12 m-wrap", @required = "required", @title = "Campo obrigatório" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="row-fluid">
                <div class="span12 ">
                    <div class="control-group">
                        @Html.LabelFor(model => model.DescricaoReclamacao, new { @class = "control-label" })
                        <div class="controls">
                            @Html.TextAreaFor(model => model.DescricaoReclamacao, new { @class = "span12 m-wrap", @id = "txtDescricao", @required = "required", @title = "Campo obrigatório" })
                        </div>
                    </div>
                </div>
            </div>
            <div class="form-actions" style="text-align: right;">
                <button type="button" data-dismiss="modal" class="btn"><i class="m-icon-swapleft"></i> Cancelar</button>
                @if (@Model != null && @Model.Id <= 0)
                {

                    <button type="submit" class="btn green"><i class="icon-ok"></i> Registrar</button>
                }
                else
                {
                    <button type="submit" class="btn green"><i class="icon-ok"></i> Atualizar</button>
                }
            </div>
        }
    </div>
</div>

<!-- scripts -->
<script src="~/Scripts/NaoConformidade/Reclamativa/reclamativa.js"></script>
