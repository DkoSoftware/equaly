@{
    Layout = null;
}

@model DKO.Equaly.DTO.Documentos.SolicitacaoDocumentoDto

@*<script src="~/Content/assets/plugins/jquery-1.10.1.min.js"></script>
<script src="~/Content/assets/plugins/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
<script src="~/Content/assets/plugins/bootstrap-datepicker/js/locales/bootstrap-datepicker.pt-BR.js"></script>
<script src="~/Content/assets/plugins/jquery-inputmask/jquery.inputmask.bundle.min.js"></script>*@
<div class="modal hide fade" tabindex="-1" data-width="70%" id="responsive">
    <div class="modal-body">
        <div id="loaderModal" style="display: none;" class="loader-modal">
            <div>
                <img src="~/Content/assets/img/ajax-modal-loading.gif" /><br />
                Aguarde...<br /><span>processando a operação solicitada</span>
            </div>
        </div>
        <div class="row-fluid">
            <div class="portlet box blue">
                <div class="portlet box blue">
                    <div class="portlet-title">
                        <div class="caption">
                            <i class="icon-reorder"></i> Novo documento
                        </div>
                        <div class="tools hidden-phone">
                            <a href="javascript:;" class="remove" data-dismiss="modal"></a>
                        </div>
                    </div>
                    <div class="portlet-body form">
                        <div class="tabbable tabbable-custom tabs-left">
                            <!-- Only required for left/right tabs -->
                            <ul class="nav nav-tabs tabs-left" id="listaAbas">
                                <li class="active">
                                    <a href="#tab_3_1" data-toggle="tab">
                                        <i class="icon-stop"></i>
                                        <span>Fase 1 - Solicitação</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a href="#tab_3_2" data-toggle="tab">
                                        <i class="icon-stop"></i>
                                        <span>Fase 2 - Elaboração</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a href="#tab_3_3" data-toggle="tab">
                                        <i class="icon-stop"></i>
                                        <span>Fase 3 - Revisão</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a href="#tab_3_4" data-toggle="tab">
                                        <i class="icon-stop"></i>
                                        <span>Fase 4 - Aprovação</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a href="#tab_3_5" data-toggle="tab">
                                        <i class="icon-stop"></i>
                                        <span>Fase 5 - Publicação</span>
                                    </a>
                                </li>
                                <li class="">
                                    <a href="#tab_3_6" data-toggle="tab">
                                        <i class="icon-book"></i>
                                        <span>Histórico</span>
                                    </a>
                                </li>
                            </ul>
                            <div class=""></div>
                            <div class="tab-content">
                                <div class="tab-pane active" id="tab_3_1" style="min-height: 300px;">
                                    @Html.Partial("_Solicitacao", @Model)
                                </div>
                                <div class="tab-pane" id="tab_3_2">
                                    @Html.Partial("_Elaboracao")
                                </div>
                                <div class="tab-pane" id="tab_3_3" style="min-height: 124px;">
                                    @Html.Partial("_Revisao", @Model)
                                </div>
                                <div class="tab-pane" id="tab_3_4" style="min-height: 124px;">
                                    @Html.Partial("_Aprovacao")
                                </div>
                                <div class="tab-pane" id="tab_3_5" style="min-height: 124px;">
                                    @Html.Partial("_Publicacao")
                                </div>
                                <div class="tab-pane" id="tab_3_6" style="min-height: 124px;">
                                    @Html.Partial("_Historico",@Model.Historico)
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
