@{
    ViewBag.Title = "Indicadores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .daterangepicker .calendar {
        display: none;
        max-width: 272px !important;
    }
</style>
<div class="row-fluid" id="indicadores">
    <div class="span12">
        <!-- BEGIN PAGE TITLE & BREADCRUMB-->
        <h3 class="page-title" style="color: #35aa47 !important;">
            Gerenciar indicadores <small style="color: gray;">dados consolidados</small>
        </h3>
        <ul class="breadcrumb" style="background-color: #35aa47; ">
            <li>
                <i class="icon-home" style="color: white !important;"></i>
                <a href="index.html" style="color: white !important;">Home</a>
                <i class="icon-angle-right" style="color: white !important;"></i>
            </li>
            <li>
                <a href="#" style="color: white !important;">Indicadores</a>
                <i class="icon-angle-right" style="color: white !important;"></i>
            </li>
            <li><a href="#" style="color: white !important;">Gerenciar indicadores</a></li>
        </ul>
        <!-- END PAGE TITLE & BREADCRUMB-->
        <!-- Start Filtro -->
        <ul class="breadcrumb">
            <li>
                <div class="caption" style="font-size: 18px; font-family: 'Open Sans', sans-serif;"><i class="icon-filter"></i>Filtros</div>
            </li>
            <li class="pull-right no-text-shadow">
                <div id="dashboard-report-range" class="dashboard-date-range tooltips no-tooltip-on-touch-device responsive"
                     data-tablet="" data-desktop="tooltips"
                     data-placement="top" data-original-title="Altera o intervalo de datas"
                     style="display: block;">
                    <i class="icon-calendar"></i>
                    <span></span>
                    <i class="icon-angle-down"></i>
                </div>
            </li>
        </ul>
        <!-- End Filtro -->
        <!-- Start Body -->
        <div class="row-fluid" id="containerNumeros">
            <div class="span12">
                <div class="portlet box light-grey">
                    <div class="portlet-title">
                        <div class="caption"><i class="icon-bar-chart"></i>Status geral</div>
                    </div>
                    <div class="portlet-body">
                        <div class="row-fluid">
                            <div class="span3">
                                <div class="easy-pie-chart">
                                    <div class="number transactions easyPieChart" data-percent="100" style="width: 75px; height: 75px; line-height: 75px;"><span id="spanQtdRnc">0</span><canvas width="75" height="75"></canvas></div>
                                    <span class="title">Qtd. de RNC´s</span>
                                </div>
                            </div>
                            <div class="margin-bottom-10 visible-phone"></div>
                            <div class="span3">
                                <div class="easy-pie-chart">
                                    <div class="number visits easyPieChart" data-percent="100" style="width: 75px; height: 75px; line-height: 75px;"><span id="spanQtdCorretiva">0</span><canvas width="75" height="75"></canvas></div>
                                    <span class="title">Qtd. de ações corretivas</span>
                                </div>
                            </div>
                            <div class="margin-bottom-10 visible-phone"></div>
                            <div class="span3">
                                <div class="easy-pie-chart">
                                    <div class="number bounce easyPieChart" data-percent="100" style="width: 75px; height: 75px; line-height: 75px;"><span id="spanQtdPreventiva">0</span><canvas width="75" height="75"></canvas></div>
                                    <span class="title">Qtd. de ações preventivas</span>
                                </div>
                            </div>
                            <div class="margin-bottom-10 visible-phone"></div>
                            <div class="span3">
                                <div class="easy-pie-chart">
                                    <div class="number bounce easyPieChart" data-percent="100" style="width: 75px; height: 75px; line-height: 75px;"><span id="spanQtdDocumentos">0</span><canvas width="75" height="75"></canvas></div>
                                    <span class="title">Qtd. de novos documentos</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="containerGraficosPizza">
            <div class="span12">
                <div class="span6">
                    <div class="portlet solid bordered light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-bar-chart"></i>Qtd RNC registrada por área</div>
                        </div>
                        <div class="portlet-body">
                            <div id="pieQtdPorArea" class="chart" style="padding: 0px; position: relative;"></div>
                        </div>
                    </div>
                </div>
                <div class="span6">
                    <div class="portlet solid bordered light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-bar-chart"></i>Qtd RNC avaliada por área</div>
                        </div>
                        <div class="portlet-body">
                            <div id="pieQtdAvaliadaPorArea" class="chart" style="padding: 0px; position: relative;"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid" id="containerGraficosLinhas">
            <div class="span12">
                <div class="span6">
                    <!-- Planos de acao-->
                    <div class="portlet solid bordered light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-bar-chart"></i>RNC's registradas</div>
                        </div>
                        <div class="portlet-body">
                            <div id="site_statistics_loading" style="display: none;">
                                <img src="~/Content/assets/img/loading.gif" alt="loading" id="loadingChart">
                            </div>
                            <div id="graficoLinhaRncRegistrada_content" class="hide" style="display: block;">
                                <div id="graficoLinhaRncRegistrada" class="chart" style="padding: 0px; position: relative;"></div>
                            </div>
                        </div>
                    </div>
                    <!---->
                </div>
                <div class="span6">
                    <!-- RNC cadastradas-->
                    <div class="portlet solid bordered light-grey">
                        <div class="portlet-title">
                            <div class="caption"><i class="icon-bar-chart"></i>Plano de ação X RNC</div>
                        </div>
                        <div class="portlet-body">
                            <div id="site_statistics_loading" style="display: none;">
                                <img src="~/Content/assets/img/loading.gif" alt="loading" id="loadingChart">
                            </div>
                            <div id="linhaPlanoAcaoXRnc" style="height: 300px; padding: 0px; position: relative;"></div>
                        </div>
                        <!-- END PORTLET-->
                    </div>
                </div>
            </div>
            <!-- End Body -->
        </div>
    </div>

    <link href="~/Content/assets/plugins/bootstrap-daterangepicker/daterangepicker.css" rel="stylesheet" />
    <link href="~/Content/assets/plugins/jquery-easy-pie-chart/jquery.easy-pie-chart.css" rel="stylesheet" />

    @section scripts{
   
        <script src="~/Content/assets/plugins/jquery-easy-pie-chart/jquery.easy-pie-chart.js"></script>
        <script src="~/Content/assets/plugins/bootstrap-daterangepicker/daterangepicker.js"></script>
        <script src="~/Content/assets/plugins/flot/jquery.flot.min.js"></script>
        <script src="~/Content/assets/plugins/flot/jquery.flot.pie.min.js"></script>
        <script src="~/Content/assets/plugins/flot/jquery.flot.resize.min.js"></script>
        <script src="~/Content/assets/plugins/flot/jquery.flot.stack.min.js"></script>
        <script src="~/Content/assets/plugins/flot/jquery.flot.time.min.js"></script>
        <script src="~/Scripts/Indicadores/indicadores.js"></script>
    }
</div>
