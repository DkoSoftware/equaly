@model DKO.Equaly.Projection.NaoConformidade.AnaliseDaCausa.CincoPorQueProjection

<div id="modalManterCincoPorque" class="modal hide fade" tabindex="-1" data-width="760">
    <div class="modal-body">
        <div class="row-fluid">
            <div class="portlet box red">
                <div class="portlet-title">
                    <div class="caption"><i class="icon-reorder"></i>Manter 5 por quê</div>
                    <div class="tools">
                        <a href="javascript:;" data-dismiss="modal" class="remove"></a>
                    </div>
                </div>
                <div class="portlet-body form">
                        @Html.HiddenFor(model => model.Id, new { @id = "hfId" })
                        @Html.HiddenFor(model => model.Indice, new { @id = "hfIndice" })
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    <label class="control-label">Usuário de destino </label>
                                    <div class="controls">
                                        @Html.DropDownListFor(model => model.UsuarioDestinoId, new SelectList(ViewBag.Usuarios, "Text", "Value"), "Selecione...", new { @class = "span12 m-wrap", @required = "required", @title = "Campo obrigatório", @id = "selUsuario", @name = "selUsuario" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    @Html.LabelFor(model => model.Pergunta, new { @class = "control-label" })
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.Pergunta, new { @class = "span12 m-wrap", @id = "txtPergunta", @required = "required", @title = "Campo obrigatório", @name = "txtPergunta" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="row-fluid">
                            <div class="span12 ">
                                <div class="control-group">
                                    @Html.LabelFor(model => model.Resposta, new { @class = "control-label" })
                                    <div class="controls">
                                        @Html.TextAreaFor(model => model.Resposta, new { @class = "span12 m-wrap", @id = "txtResposta" })
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="form-actions" style="text-align: right;">
                            <button type="button" data-dismiss="modal" class="btn"><i class="m-icon-swapleft"></i> Cancelar</button>
                            <button type="button" class="btn green" id="btnAdicionarPorQue"> Salvar <i class="icon-ok"></i></button>
                        </div>
                </div>
            </div>
        </div>
        <script src="~/Scripts/NaoConformidade/AnaliseDaCausa/manterCincoPorque.js"></script>
    </div>
</div>
